<h1><%= t('.title') %></h1>
<ul class='list actions'>
  <li class='first'><%= link_to t('.new'), new_user_path %></li>
</ul>
<div class='list'>
<% @users.each_with_index do |user, index| %>
  <div class='user element <%= odd_or_even(index) %>'>
    <h3><%=h user.username %></h3>
    <ul>
      <li><%=h user.email %></li>
    </ul>
    <ul class='actions'>
      <li class='first'><%= link_to t('actions.show'), user_path(user) %></li>
      <% unless user == current_user %>
      <li><%= link_to t('actions.destroy'), user_path(user), :confirm => t('actions.confirm_destroy'), :method => :delete %></li>
      <% end %>
    </ul>
  </div>
<% end %>
</div>