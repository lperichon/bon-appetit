<h1>Viewing order item for <%= link_to parent.to_s, admin_restaurant_order_path(parent.restaurant, parent) %></h1>

<p>
  <b>Product:</b>
  <%=h resource.product.name %>
</p>
<p>
  <b>Quantity:</b>
  <%=h resource.quantity %>
</p>
<p>
  <b>Unit Price:</b>
  <%=h resource.unit_price %>
</p>
<p>
  <b>Discount:</b>
  <%=h number_to_percentage(resource.discount*100, :precision => 0) %>
</p>
<p>
  <b>Subtotal:</b>
  <%=h number_to_currency(resource.subtotal, :unit => "$") %>
</p>

<%= link_to 'Edit', edit_admin_restaurant_order_order_item_path(parent.restaurant, parent, resource) %> |
<%= link_to 'Back', admin_restaurant_order_order_items_path(parent.restaurant) %>