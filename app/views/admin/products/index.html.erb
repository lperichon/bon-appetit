<h1>Listing products for <%= link_to parent.name, admin_restaurant_path(parent) %></h1>

<table class='table'>
  <tr>
    <th class='first'>Product type</th>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th class='last'>Actions</th>
  </tr>

<% collection.each_with_index do |resource, index| %>
  <% parent = resource.restaurant %>
  <tr class='<%= odd_or_even(index) %>'>
    <td><%=h resource.product_type.name %></td>
    <td><%=h resource.name %></td>
    <td><%=h resource.description %></td>
    <td><%=h number_to_currency(resource.price, :unit => "$") %></td>
    <td class='last'><%= link_to 'Show', admin_restaurant_product_path(parent, resource) %> | <%= link_to 'Edit', edit_admin_restaurant_product_path(parent, resource) %> | <%= link_to 'Destroy', admin_restaurant_product_path(parent, resource), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<div class='actions-bar'>
  <%= link_to 'New product', new_admin_restaurant_product_path(parent) %>
</div>