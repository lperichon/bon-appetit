<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <title>Bon Appetit</title>
  <%= javascript_include_tag 'jquery-1.3.2.min' %>
  <%= javascript_include_tag 'jquery.templating' %>
  <%= javascript_include_tag 'jquery.ui.autocomplete.ext' %>
  <%= javascript_include_tag 'jquery.ui.autocomplete' %>
  <%= javascript_include_tag 'jrails' %>
  <%= javascript_include_tag 'jintastic' %>
  <%= javascript_include_tag 'calendar' %>
  <%= javascript_include_tag 'application' %>

  <%= stylesheet_link_tag "application" %>
  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag "formtastic" %>
  <%= stylesheet_link_tag 'calendar' %>
  <%= stylesheet_link_tag 'autocomplete' %>
  <%= stylesheet_link_tag 'jquery.ui.autocomplete' %>
</head>
<body>
  <div id="wrapper">
    <div id="header">
      <h1><a href="/">Bon Appetit</a></h1>
      <% unless current_user.nil? %>
      <div id="user_menu">
        <ul>
          <% if current_user %>
          <li><%= link_to t('menu.logout'), logout_path %></li>
          <li><%= link_to t('menu.profile'), edit_profile_path %></li>
          <% else %>
          <li><%= link_to t('menu.login'), login_path %></li>
          <li><%= link_to t('menu.signup'), signup_path %></li>
          <% end %>
        </ul>
      </div>
      <div id="main_menu">
        <%= semantic_menu do |root|
          root.add t('menu.dashboard'), dashboard_path
          root.add t('menu.orders'), orders_path
          root.add t('menu.contacts'), contacts_path
          if current_restaurant && current_restaurant.manager == current_user
            root.add t('menu.admin'), '#' do |admin|
              admin.add t('menu.restaurant'), edit_restaurant_path
              admin.add t('menu.users'), users_path
              admin.add t('menu.products'), products_path
              admin.add t('menu.product_types'), product_types_path
            end
          end
        end %>
      </div>
      <% end %>
    </div>
    <div id="main">
      <div class="flash">
        <% flash.each do |type, message| -%>
          <div class="message <%= type %>">
            <p><%= message %></p>
          </div>
        <% end -%>
      </div>
      <div id="sidebar">
        <%= yield :sidebar %>
      </div>
      <div id="content">
        <%= yield %>
      </div>
      <div class="clear"></div>
    </div>
    <div id="footer">
      <p><%= t('application.copyright') %></p>
    </div>
  </div>
</body>
</html>
