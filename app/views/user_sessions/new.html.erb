<h2>Login</h2>

<% semantic_form_for @user_session do |f| %>
  <% f.inputs do %>
    <%= f.input :username %>
    <%= f.input :password %>
    <%= f.input :remember_me, :as => :boolean, :required => false %>
  <% end %>

  <%= f.buttons %> <%= link_to 'Reset Password', new_password_reset_path %> <%= link_to 'Signup', signup_path %>
<% end %>