<h2><%= t('user_sessions.new.title')%></h2>

<% semantic_form_for @user_session do |f| %>
  <% f.inputs do %>
    <%= f.input :username %>
    <%= f.input :password %>
    <%= f.input :remember_me, :as => :boolean, :required => false %>
  <% end %>

  <%= f.buttons %> <%= link_to t('actions.reset_password'), new_password_reset_path %> <%= link_to t('actions.signup'), signup_path %>
<% end %>