<% semantic_form_remote_for([@order, @order.order_items.new]) do |oi_f| %>
  <% oi_f.inputs do %>
    <%= oi_f.input :product, :as => :autocomplete, :url => autocomplete_products_path %>
    <%= oi_f.input :quantity %>
    <%= oi_f.input :discount, :as => :select, :collection => discounts, :prompt => false %>
  <% end %>
  <%= oi_f.buttons %>
<% end %>