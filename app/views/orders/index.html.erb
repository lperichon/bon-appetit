<h1><%= t('orders.index.title') %></h1>
<ul class='list actions'>
  <li class='first'><%= link_to t('.new'), new_order_path %></li>
  <li><%= link_to_function t('actions.search'), "open_modal('search_orders')" %></li>
</ul>
<div id='search_orders' class='modal' style='display:none;'>
  <%= render :partial => 'search_form' %>
</div>
<div id="orders" class='list'>
<% @orders.each_with_index do |order, index| %>
  <div class='order element <%= odd_or_even(index) %>'>
    <h3><%=h order.to_s %> - <%=h order.generated_at %></h3>
    <ul>
      <% if order.contact.present? %>
      <li><span class='label'><%= Order.human_attribute_name('contact') %>:</span> <%=h order.contact.name %></li>
      <% end %>
      <% if order.table_id.present? %>
      <li><span class='label'><%= Order.human_attribute_name('table') %>:</span> <%=h order.table_id %></li>
      <% end %>
      <li><span class='label'><%= Order.human_attribute_name('discount') %>:</span> <%=h discount_label(order.discount) %></li>
      <li><span class='label'><%= Order.human_attribute_name('total') %>:</span> <%=h number_to_currency(order.total, :unit => "$") %></li>
      <li><span class='label'><%= Order.human_attribute_name('status') %>:</span> <%=h order_status_label(order) %></li>
    </ul>
    <ul class='actions'>
      <li class='first'><%= link_to t('actions.show'), order_path(order) %></li>
    </ul>
  </div>
<% end %>
</div>